{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["webpack-env", "webextension-polyfill"],
    "typeRoots": ["node_modules/@types", "src/app"],
    "paths": { "*": ["./src/app/*"] },
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "checkJs": false,
    "noEmit": false,
    "noEmitOnError": false,
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "scripts"]
}
