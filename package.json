{
  "name": "hostelworld-on-roids-extension",
  "engines": {
    "npm": "^11.4.2",
    "yarn": "^4.9.2",
    "node": "^24.3.0"
  },
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "watch": "yarn build:dev --watch --mode=development",
    "build:prod": "webpack --config webpack.config.mjs --mode=production",
    "build:dev": "webpack --config webpack.config.mjs --mode=development",
    "lint": "yarn lint:tsc && yarn lint:eslint && yarn lint:scss && yarn lint:commit",
    "lint:tsc": "tsc --noEmit --incremental false",
    "lint:eslint": "eslint \"{src,scripts}/**/*.{ts,js,mjs}\"",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "lint:commit": "node scripts/commitlint.mjs",
    "crx:key": "node scripts/crx-key.mjs",
    "upload": "node scripts/upload.mjs",
    "package:zip": "node scripts/package.mjs --type zip",
    "package:crx": "node scripts/package.mjs --type crx",
    "extension:upload": "node scripts/deploy.mjs --upload",
    "extension:publish": "node scripts/deploy.mjs --publish",
    "extension:deploy": "node scripts/deploy.mjs --upload --publish"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.0",
    "@types/node": "^24.0.8",
    "@types/webextension-polyfill": "^0.12.3",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "archiver": "^7.0.1",
    "babel-loader": "^10.0.0",
    "chalk": "^5.4.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "3",
    "crx3": "^2.0.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.0",
    "eslint": "^9.26.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.3.0",
    "mini-css-extract-plugin": "^2.9.0",
    "node-forge": "^1.3.2",
    "postcss": "^8.4.38",
    "sass": "^1.77.4",
    "sass-loader": "^14.2.1",
    "stylelint": "^16.6.1",
    "stylelint-config-sass-guidelines": "^11.1.0",
    "stylelint-scss": "^6.3.1",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "webpack-ext-reloader": "^1.1.13",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "ky": "^1.3.0",
    "serialize-anything": "^1.2.3"
  }
}
